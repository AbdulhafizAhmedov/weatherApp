<form action="/register" method="post">
    <p class="fs-1">Register</p>

    {{#if registerErr}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> 
        {{registerErr}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <div class="d-flex gap-3">
        <div class="form-floating mb-3 w-50">
            <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Omar">
            <label for="firstname">First Name</label>
        </div>
        <div class="form-floating mb-3 w-50">
            <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Omar">
            <label for="lastname">Last Name</label>
        </div>
    </div>
    <div class="form-floating mb-3">
        <input type="email" class="form-control" name="email" id="floatingEmail" placeholder="name@example.com">
        <label for="floatingEmail">Email address</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>