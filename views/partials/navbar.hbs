<div class="container-fluid py-3 sticky-top bg-body-tertiary">
    <header>
        <div class="d-flex justify-content-around align-items-center gap-3 border-bottom">
            <a href="/" class="d-flex align-items-center link-body-emphasis text-decoration-none pb-3">
                <i class="fa-solid fa-cloud fs-1 text-success"></i>
                <span class="fs-4 fw-medium">Weather</span>
            </a>

            
            <nav class="navbar bg-body-tertiary">
            
                <div class="container-fluid">
              {{#if token}}      
                    <form class="d-flex" role="search" method="post">
                        <input class="form-control me-2" name="cityname" type="search" placeholder="Search" aria-label="Search"/>
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
              {{/if}}      
                </div>
            
            </nav>
            <nav class="d-inline-flex mt-md-0">
            
                <div class="btn-group mb-3" role="group" aria-label="Basic example">
                    {{#if token}}
                        <button type="button" class="btn btn-danger active">
                            <a class="text-light text-decoration-none" href="/logout">Logout</a>
                        </button>
                        {{else}}
                        {{#if isLogin}}
                        <button type="button" class="btn btn-primary active">
                                <a class="text-light text-decoration-none" href="/login">Login</a>
                            </button> 
                        {{else}}
                            <button type="button" class="btn btn-primary">
                                <a class="text-light text-decoration-none" href="/login">Login</a>
                            </button>
                        {{/if}}
                        
                        {{#if isRegister}}
                            <button type="button" class="btn btn-success active">
                                <a class="text-light text-decoration-none" href="/register">Register</a>
                            </button>
                        {{else}}
                            <button type="button" class="btn btn-success">
                                <a class="text-light text-decoration-none" href="/register">Register</a>
                            </button>
                        {{/if}}
                    {{/if}}
                    
                </div>
            </nav>
        </div>
    </header>
</div>
